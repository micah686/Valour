<img alt="Stargazer badge" class="dot-badge" src="@GetDataUri(UserId, Color1, Color2)" />

@code {
    [Parameter]
    public long UserId { get; set; }

    [Parameter]
    public string Color1 { get; set; }

    [Parameter]
    public string Color2 { get; set; }

    public static string GetDataUri(long userId, string color1, string color2)
    {
        // Pre-encode # as %23 for the data URI (# is not valid unencoded in a URI)
        var c1 = color1?.Replace("#", "%23") ?? "%23C0C0C0";
